# ICONS 2025 Award Certificate Matching System
# Apache Configuration

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /lilac/
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"

    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# File Upload Settings
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value memory_limit 256M

# Directory Index - Use original index.php with your design
DirectoryIndex index.php dashboard.php

# Prevent Directory Listing
Options -Indexes

# Protect Configuration Files
<FilesMatch "\.(htaccess|htpasswd|ini|log|sql)$">
    Require all denied
</FilesMatch>

# Protect sensitive directories
<IfModule mod_rewrite.c>
    RewriteRule ^config/ - [F,L]
    RewriteRule ^classes/ - [F,L]
    RewriteRule ^database/ - [F,L]
    RewriteRule ^logs/ - [F,L]
</IfModule>

# Note: Directory directives should be in httpd.conf or vhost config
# For uploads protection, we'll use FilesMatch instead

# Custom Error Pages (optional)
# ErrorDocument 404 /lilac/404.php
# ErrorDocument 500 /lilac/500.php

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
